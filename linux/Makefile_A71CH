# Conditional statements depending on input parameters
# What application to compile?

ifeq ($(app),RJCT_A71)
	DFLAGS += -DTGT_A71CH
	TARGET  = rjct_a71
	INC		+= \
		 -I../hostLib/tstUtil \
		 -I../hostLib/rjct/inc
	SOURCES = $(RJCT_SOURCES)
endif

